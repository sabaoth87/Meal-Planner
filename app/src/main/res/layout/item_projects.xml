<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--

Title of the Project

-->
    <LinearLayout
        android:id="@+id/item_ll_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_tv_prjnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="_abl_" />
        <TextView
            android:id="@+id/item_tv_prjname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_short_"/>

    </LinearLayout>
<!--

Body of the Project

-->
    <LinearLayout
        android:id="@+id/item_ll_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_tv_notenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="      Notes
                            Go Here"
            />

        <TextView
            android:id="@+id/item_tv_notename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="      Notes
                            Go Here"
            />
    </LinearLayout>

    <!--

    Lower Portion of the Project

    -->

    <LinearLayout
        android:id="@+id/item_ll_tail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_tv_noteentry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="_id_" />

    </LinearLayout>

    <!--

   Tags of the Project

   -->

    <LinearLayout
        android:id="@+id/item_lv_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/item_lv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_null" />
    </LinearLayout>

</LinearLayout>